.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f0f0f0;
}

.game-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.score, .timer {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.game-area {
  flex: 1;
  position: relative;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.target {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  transition: transform 0.1s ease;
}

.target.active {
  transform: scale(0.9);
}

.game-controls {
  padding: 20rpx;
}

.control-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #4bb0ff, #6149f6);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(97, 73, 246, 0.4);
}

.control-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(97, 73, 246, 0.4);
}

.game-over {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
}

.game-over-text {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.final-score {
  font-size: 36rpx;
  color: #fff;
} 