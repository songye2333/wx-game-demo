.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  height: 100vh;
  background-color: #f0f0f0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #333;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #666;
}

.start-btn, .login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(to right, #4bb0ff, #6149f6);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(97, 73, 246, 0.4);
}

.start-btn:active, .login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(97, 73, 246, 0.4);
} 